<!-----sections/gift-idea-by-price.liquid-------->
<section class="gift-section-container">
  <div class="gift-section-upper">
    <div class="gift-section-heading" style="color: {{section.settings.heading_text_color}}; ">
          {{section.settings.heading_text | escape }}
    </div>
    <div class="gift-section-description">
      {{section.settings.description_text}}
    </div>
    <div class="gift-section-description2">
      {{section.settings.description_text2}}
    </div>
  </div>
  
  <div class="gift-section-lower">
    {% for block in section.blocks %}
    <div class="gift-section-block">
      
<!--       <div class="gift-collection"> -->
        {%- if block.settings.button_text_1 != blank -%}
          <a href="{{ block.settings.button_link_1 }}" class="gift-collection" >
        	     {{block.settings.button_text_1 }}
          </a>
        {% endif %}
<!--       </div>
     -->
<!--       <div class="gift-collection"> -->
        {%- if block.settings.button_text_2 != blank -%}
          <a href="{{ block.settings.button_link_2 }}" class="gift-collection" >
        	     {{block.settings.button_text_2 }}
          </a>
        {% endif %}
<!--       </div>
       -->
<!--       <div class="gift-collection"> -->
        {%- if block.settings.button_text_3 != blank -%}
          <a href="{{ block.settings.button_link_3 }}" class="gift-collection" >
        	     {{block.settings.button_text_3 }}
          </a>
        {% endif %}
<!--       </div>
     -->
<!--       <div class="gift-collection"> -->
        {%- if block.settings.button_text_4 != blank -%}
          <a href="{{ block.settings.button_link_4 }}" class="gift-collection" >
        	     {{block.settings.button_text_4 }}
          </a>
        {% endif %}
<!--       </div>
       -->
    </div>
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "Gift Idea By Price",
    "settings": [
	 {
  	   "type": "text",
       "id": "heading_text",
  	   "label": "Heading Text",
       "default": "Heading"
     },
	 {
       "type": "color",
  	   "id": "heading_text_color",
   	   "label": "Heading Text Color",
  	   "default": "#000000"
	 },
	 {
  	   "type": "richtext",
  	   "id": "description_text",
       "label": "Description Text",
	   "default": "<p>This is some richtext.</p>"
     },
             {
  	   "type": "text",
       "id": "description_text2",
  	   "label": "Description Text2",
       "default": "Heading"
     }
	],
	"blocks": [
	 {
	   "type": "text",
	   "name": "Gift Collections",
	   "settings": [
		{
	   	  "type": "text",
       	  "id": "button_text_1",
       	  "label": "Button Text 1"
	 	},
		{
  	   	  "type": "url",
  	   	  "id": "button_link_1",
  	   	  "label": "Button Link 1"
	 	},
		{
	   	  "type": "text",
       	  "id": "button_text_2",
       	  "label": "Button Text 2"
	 	},
		{
  	   	  "type": "url",
  	   	  "id": "button_link_2",
  	   	  "label": "Button Link 2"
	 	},
		{
	   	  "type": "text",
       	  "id": "button_text_3",
       	  "label": "Button Text 3"
	 	},
		{
  	   	  "type": "url",
  	   	  "id": "button_link_3",
  	   	  "label": "Button Link 3"
	 	},
		{
	   	  "type": "text",
       	  "id": "button_text_4",
       	  "label": "Button Text 4"
	 	},
		{
  	   	  "type": "url",
  	   	  "id": "button_link_4",
  	   	  "label": "Button Link 4"
	 	}
	   ] 
	 }
	],
	"presets": [
	 {	
       "name": "Gift Idea By Price",
	   "category": "Collection",
	   "blocks": [
		{
		  "type": "text"
		}
	   ]
	 }
	]
  }
{% endschema %}

